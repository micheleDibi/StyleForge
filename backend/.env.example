# ===========================================
# StyleForge - Configurazione Ambiente
# ===========================================

# API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
# Trova questi valori nel pannello Supabase:
# Settings -> Database -> Connection string

# URL del progetto Supabase (es: https://xxxxx.supabase.co)
SUPABASE_URL=https://your-project-ref.supabase.co

# Chiave pubblica (anon key) - per operazioni client-side
SUPABASE_ANON_KEY=your-supabase-anon-key

# Chiave service role - per operazioni server-side (NON esporre al client!)
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Database Connection String
# Vai su: Supabase Dashboard -> Settings -> Database -> Connection string
# Scegli "URI" e copia la stringa, sostituendo [YOUR-PASSWORD] con la password del DB
#
# Formato Transaction Pooler (porta 6543) - consigliato per la maggior parte dei casi:
# DATABASE_URL=postgresql://postgres.xxxxx:PASSWORD@aws-0-eu-central-1.pooler.supabase.com:6543/postgres
#
# Formato Session Pooler (porta 5432) - per connessioni async con asyncpg:
# DATABASE_URL=postgresql://postgres.xxxxx:PASSWORD@aws-0-eu-central-1.pooler.supabase.com:5432/postgres
#
# NOTA: Per asyncpg (usato da FastAPI), usa la porta 5432 (Session mode)
DATABASE_URL=postgresql://postgres.your-project-ref:your-password@aws-0-eu-central-1.pooler.supabase.com:5432/postgres

# ===========================================
# JWT Authentication
# ===========================================
JWT_SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================
# Claude Configuration
# ===========================================
MAX_TOKENS_TRAIN=4096
MAX_TOKENS_TEST=8192

# ===========================================
# Server Configuration
# ===========================================
HOST=0.0.0.0
PORT=8000
DEBUG=False
RELOAD=False

# ===========================================
# Job Manager Configuration
# ===========================================
MAX_CONCURRENT_JOBS=10
JOB_CLEANUP_HOURS=24
SESSION_CLEANUP_HOURS=24

# ===========================================
# File Upload Configuration
# ===========================================
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=100
RESULTS_DIR=./results

# ===========================================
# Prompt Configuration
# ===========================================
PROMPT_ADDESTRAMENTO_PATH=prompt_addestramento.txt

# ===========================================
# CORS Configuration
# ===========================================
# Origini permesse (separate da virgola, usa * per permettere tutte)
CORS_ORIGINS=*

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_PER_MINUTE=60
